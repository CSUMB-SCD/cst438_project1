<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:theme="@style/AppTheme">


        <TextView
            android:id="@+id/individual_points_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="27dp"
            android:layout_marginEnd="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:text="Points Earned: "
            app:layout_constraintBottom_toTopOf="@+id/individual_chart"
            app:layout_constraintHorizontal_bias="0.511"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/individual_points_placeholder"
            app:layout_constraintTop_toTopOf="parent"
            style="@style/TextStyle"
            />

        <TextView
            android:id="@+id/individual_points_placeholder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="191dp"
            android:layout_marginRight="190dp"
            android:visibility="invisible"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginBottom="25dp"
            app:layout_constraintBottom_toTopOf="@+id/individual_chart"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp"
            style="@style/TextStyle"/>

        <com.github.mikephil.charting.charts.BarChart
            android:id="@+id/individual_chart"
            android:layout_width="342dp"
            android:layout_height="298dp"
            android:layout_marginBottom="53dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent" />

    </android.support.constraint.ConstraintLayout>

</FrameLayout>
