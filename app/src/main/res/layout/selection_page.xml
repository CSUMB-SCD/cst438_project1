<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/individual_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="42dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="82dp"
        android:text="Individual with ASD"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/caretaker_textView"
        app:layout_constraintVertical_bias="0.089" />

    <TextView
        android:id="@+id/caretaker_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Caretaker"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginLeft="42dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/caretaker_choice_bttn"
        android:layout_marginRight="8dp"
        app:layout_constraintHorizontal_bias="0.08"
        android:layout_marginBottom="141dp"
        app:layout_constraintBottom_toTopOf="@+id/next_bttn" />

    <RadioButton
        android:id="@+id/individual_choice_bttn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="90dp"
        app:layout_constraintLeft_toRightOf="@+id/individual_textView"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.072"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/caretaker_choice_bttn"
        app:layout_constraintVertical_bias="0.0" />

    <RadioButton
        android:id="@+id/caretaker_choice_bttn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="111dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="279dp" />

    <Button
        android:id="@+id/next_bttn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="100dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:text="Next"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.153"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />
</android.support.constraint.ConstraintLayout>
