<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <TextView
        android:id="@+id/individual_score_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="48dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="121dp"
        android:text="Score:"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/colorPrimaryBlue"
        app:layout_constraintBottom_toTopOf="@+id/results_logo"
        app:layout_constraintHorizontal_bias="0.095"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/individual_score"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/individual_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginRight="178dp"
        android:layout_marginTop="128dp"
        app:layout_constraintBottom_toTopOf="@+id/results_logo"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/results_logo"
        android:layout_width="320dp"
        android:layout_height="266dp"
        app:srcCompat="@drawable/assessment_results_logo"
        tools:layout_editor_absoluteX="32dp"
        tools:layout_editor_absoluteY="186dp" />
</android.support.constraint.ConstraintLayout>
